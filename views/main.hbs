<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MongoDB CRUD</title>
</head>
<body>
  <h1>MONGODB CRUD OPERATIONS</h1>

  {{#if message}}
    <p style="color: green;">{{message}}</p>
  {{/if}}

  {{#if edit_id}}
    <h2>Edit Book</h2>
  {{else}}
    <h2>Add Book</h2>
  {{/if}}

  <form method="POST" action="/store_book">
    <!-- Hidden field to track edit -->
    <input type="hidden" name="edit_id" value="{{edit_id}}" />

    <label for="title">Title:</label>
    <input type="text" name="title" value="{{edit_book.title}}" required />

    <label for="author">Author:</label>
    <input type="text" name="author" value="{{edit_book.author}}" required />

    <input type="submit" value="{{#if edit_id}}Update{{else}}Add{{/if}}">
  </form>

  <hr>

  <h3>Book List</h3>
  <ul>
    {{#each books}}
      <li>
        <strong>{{this.title}}</strong> by {{this.author}}  
        - <a href="/?edit_id={{this._id}}">Edit</a>
      </li>
    {{/each}}
  </ul>
</body>
</html>
